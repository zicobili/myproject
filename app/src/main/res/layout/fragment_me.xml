<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/deafault_Activity_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_400_dip"
                android:background="@mipmap/background">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_30_dip"
                    android:paddingBottom="@dimen/dimen_30_dip"
                    android:paddingLeft="@dimen/dimen_30_dip"
                    android:gravity="center_vertical"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="@dimen/dimen_80_dip"
                        android:layout_height="@dimen/dimen_80_dip"
                        android:background="@mipmap/default_head5"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_30_dip"
                        android:text="亲，你还没有登录"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/abc_list_selector_disabled_holo_light">
                    <RelativeLayout
                        android:id="@+id/me_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:text="我的钱包"
                            android:layout_centerInParent="true"
                            android:drawableLeft="@mipmap/wallet"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="@dimen/dimen_1_dip"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dimen_20_dip"/>
                    <RelativeLayout
                        android:id="@+id/me_surance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:text="我的兼职保险"
                            android:drawableLeft="@mipmap/secure"/>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/deafault_Item_bg"
                android:layout_marginTop="@dimen/dimen_20_dip">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_20_dip"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#555555"
                        android:text="我的申请"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1_dip"
                    android:background="#f4f4f4"
                    />
                <LinearLayout
                    android:id="@+id/ll_myenroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_20_dip"
                    android:paddingBottom="@dimen/dimen_20_dip"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已报名"
                            android:drawableTop="@mipmap/drafts"
                            android:textColor="#666666"
                            android:textAppearance="@style/TextAppearance.AppCompat"/>

                    </LinearLayout>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dimen_10_dip"
                        android:background="#f4f4f4"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已录用"
                            android:drawableTop="@mipmap/drafts"
                            android:textColor="#666666"
                            android:textAppearance="@style/TextAppearance.AppCompat"/>

                    </LinearLayout>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dimen_10_dip"
                        android:background="#f4f4f4"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已到岗"
                            android:drawableTop="@mipmap/drafts"
                            android:textColor="#666666"
                            android:textAppearance="@style/TextAppearance.AppCompat"/>

                    </LinearLayout>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dimen_10_dip"
                        android:background="#f4f4f4"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已结算"
                            android:drawableTop="@mipmap/drafts"
                            android:textColor="#666666"
                            android:textAppearance="@style/TextAppearance.AppCompat"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/deafault_Item_bg"
                android:layout_marginTop="@dimen/dimen_30_dip">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_20_dip"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#555555"
                        android:text="我的简历"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1_dip"
                    android:background="#f4f4f4"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_20_dip"
                    android:paddingBottom="@dimen/dimen_20_dip"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/me_personal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="基本资料"
                            android:drawableTop="@mipmap/btn_me_resume"
                            android:textColor="#666666"
                            android:textAppearance="@style/TextAppearance.AppCompat"/>

                    </LinearLayout>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dimen_10_dip"
                        android:background="#f4f4f4"/>
                    <LinearLayout
                        android:id="@+id/me_jobcard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="职位卡"
                            android:drawableTop="@mipmap/btn_me_jobcar"
                            android:textColor="#666666"
                            android:textAppearance="@style/TextAppearance.AppCompat"/>

                    </LinearLayout>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dimen_10_dip"
                        android:background="#f4f4f4"/>
                    <LinearLayout
                        android:id="@+id/me_renzheng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="实名认证"
                            android:drawableTop="@mipmap/btn_me_identification"
                            android:textColor="#666666"
                            android:textAppearance="@style/TextAppearance.AppCompat"/>

                    </LinearLayout>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dimen_10_dip"
                        android:background="#f4f4f4"/>
                    <LinearLayout
                        android:id="@+id/me_interest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="求职设置"
                            android:drawableTop="@mipmap/btn_me_set"
                            android:textColor="#666666"
                            android:textAppearance="@style/TextAppearance.AppCompat"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/me_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_30_dip"
                android:gravity="center_vertical"
                android:background="@color/deafault_Item_bg"
                android:padding="@dimen/dimen_20_dip">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/love"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#555555"
                    android:layout_marginLeft="@dimen/dimen_10_dip"
                    android:text="我的收藏"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/me_suggest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="1px"
                android:background="@color/deafault_Item_bg"
                android:padding="@dimen/dimen_20_dip">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bulb"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#555555"
                    android:layout_marginLeft="@dimen/dimen_10_dip"
                    android:text="意见反馈"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/me_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="1px"
                android:background="@color/deafault_Item_bg"
                android:layout_marginBottom="@dimen/dimen_120_dip"
                android:padding="@dimen/dimen_20_dip">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/more_green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#555555"
                    android:layout_marginLeft="@dimen/dimen_10_dip"
                    android:text="更多设置"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_20_dip"
            android:layout_alignParentTop="true"
            android:background="#fe751a">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
