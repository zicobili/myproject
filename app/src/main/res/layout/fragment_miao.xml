<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    android:background="@color/deafault_Activity_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_20_dip"
        android:background="@color/colorPrimary">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/add"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喵"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    </RelativeLayout>
    <RadioGroup
        android:id="@+id/miao_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/deafault_Item_bg"
        android:padding="0dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/miao_rb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingTop="@dimen/dimen_20_dip"
            android:text="消息"
            android:background="@color/deafault_Item_bg"
            android:button="@null"
            android:drawablePadding="@dimen/dimen_20_dip"
            android:drawableBottom="@drawable/miao_topbar_bg"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@color/color_miao_topbar"/>
        <RadioButton
            android:id="@+id/miao_rb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_20_dip"
            android:layout_weight="1"
            android:text="通信录"
            android:background="@color/deafault_Item_bg"
            android:button="@null"
            android:drawablePadding="@dimen/dimen_20_dip"
            android:drawableBottom="@drawable/miao_topbar_bg"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@color/color_miao_topbar"/>


    </RadioGroup>
    <FrameLayout
        android:id="@+id/miao_ly_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>


</LinearLayout>
