<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/deafault_Activity_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10_dip"
        android:background="@color/deafault_Item_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/back"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/title"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/deafault_Item_bg"
        android:orientation="horizontal"
        android:layout_marginTop="2px"
        android:padding="@dimen/dimen_20_dip">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="@dimen/dimen_30_dip"
                android:layout_marginRight="@dimen/dimen_30_dip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#333333"
                android:minEms="5"
                android:gravity="center"
                android:text="你的邮箱"/>
        </LinearLayout>
        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="#f4f4f4"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:hint="请输入你的邮箱"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColorHint="#999999"
                android:textColor="#333333"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/deafault_Item_bg"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:padding="@dimen/dimen_20_dip">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="@dimen/dimen_30_dip"
                android:layout_marginRight="@dimen/dimen_30_dip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#333333"
                android:minEms="5"
                android:gravity="center"
                android:text="反馈信息"/>
        </LinearLayout>
        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="#f4f4f4"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:hint="问题反馈"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColorHint="@color/colorPrimary"
                android:textColor="#333333"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_30_dip"
        android:background="@color/deafault_Item_bg"
        android:layout_marginTop="1px">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dimen_20_dip"
            android:layout_height="@dimen/dimen_300_dip"
            android:background="@color/deafault_Activity_bg">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入反馈信息"
                android:textColorHint="#999999"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:background="@color/deafault_Activity_bg"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
